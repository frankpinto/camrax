<% if controller.action_name != 'list' %>
  <h3>Recently Added or Updated Books <a href="/admin/books/list">(View All)</a></h3>
<% else %>
  <h3>All Books</h3>
<% end %>
<table cellpadding="0" cellspacing="0" class="list">
<% @books.each do |book| %>
  <tr>
    <td><%= book.short_title %></td>
    <td class="action"><a href="<%= admin_book_path(book) %>" class="view">View</a><a href="<%= edit_admin_book_path(book) %>" class="edit">Edit</a><a href="/book/<%= book.id %>/destroy" class="delete">Delete</a></td>
  </tr>                        
<% end %>
</table>
