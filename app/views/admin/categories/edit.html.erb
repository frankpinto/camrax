<h3>Edit <%= @category.title %></h3>
<%= render :partial => 'form' %>
<% form_for @category do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br />
  <% form.fields_for :languages do |language| %>
    <%= language.label :language %>
    <%= language.text_field :language %><br />
    <%= language.label :words %>
    <%= language.text_field :words %>
  <% end %>

  <%= form.label :body %>
  <%= form.cktext_area :body %><br />

  <input type="submit" value="Update!" />
<% end %>

